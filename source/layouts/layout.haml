!!! 5
%html.no-js(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(http-equiv="X-UA-Compatible" content="ie=edge")
    %meta(name="description" content="Demuxed 2020")
    %meta(name="viewport" content="width=device-width, initial-scale=1")
    %meta(name="HandheldFriendly" content="True")
    %meta(name="MobileOptimized" content="320")
    %title
      = current_page.data.title || "Demuxed 2020"

    %link{:href => "https://use.typekit.net/gnp7kvj.css", :rel => "stylesheet"}/

    = favicon_tag("/favicon.ico", rel: "shortcut icon")

    = stylesheet_link_tag(:site)

  %body(class="#{page_classes()}")
    %div.wrapper
      = partial(:header)

      %div.main-content
        = yield

      = partial(:talks)
      = partial(:footer)

    = javascript_include_tag(:mobilemenu)

    - unless current_page.data.include_javascripts.nil?
      - current_page.data.include_javascripts.each do |js|
        = javascript_include_tag(js)
